<Window x:Class="TankSim.Client.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TankSim.Client.GUI"
        xmlns:tSim="clr-namespace:TankSim;assembly=TankSim"
        mc:Ignorable="d"
        Title="{Binding Source={x:Static tSim:Constants.GameName}, Mode=OneWay}" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <ContentControl 
            Content="{Binding FrameContent}" 
            IsTabStop="False"/>
    </DockPanel>
</Window>
