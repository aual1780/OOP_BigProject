<UserControl x:Class="TankSim.Client.GUI.Frames.Operations.OperatorModuleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TankSim.Client.GUI.Frames.Operations"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Label Content="{Binding GameHost.Endpoint}" ContentStringFormat="Game Host: {0}"/>
            <Label Content="{Binding Roles}" ContentStringFormat="Your Roles: {0}"/>
            <ItemsControl 
                ItemsSource="{Binding ModuleCtrlCollection}"
                Margin="0 20px 0 0" />
        </StackPanel>

    </Grid>
</UserControl>
